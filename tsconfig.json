{
  "files": [],
  "compilerOptions": {
    "paths": {
      "$lib": [
        "./src/lib"
      ],
      "$lib/*": [
        "./src/lib/*"
      ]
    },
    "rootDirs": [
      "."
    ]
  },
  "include": [
    "ambient.d.ts",
    "non-ambient.d.ts",
    "types/**/$types.d.ts",
    "vite.config.js",
    "vite.config.ts",
    "tailwind.config.js",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.svelte"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
